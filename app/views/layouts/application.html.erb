<!DOCTYPE html>
<html>
<head>
  <title>langforums</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
  <nav>
    <% if user_signed_in? %>
      <%= link_to current_user.email, main_app.edit_user_registration_path %>
      | <%= link_to t(:sign_out), main_app.destroy_user_session_path, :method => :delete %>
      <% if current_user.forem_admin %>
      | <%= link_to t(:area, :scope => 'forem.admin'), forem.admin_root_url %>
      <% end %>
    <% else %>
      <%= link_to t(:sign_up), main_app.new_user_registration_path %>
      | <%= link_to t(:sign_in), main_app.new_user_session_path %>
    <% end %>
  </nav>
</header>

<%= t(:introduction).html_safe %>

<p>
<%= link_to t(:language_count, count: Language.count), main_app.languages_path %>
| <%= link_to t(:report_bug), '/f/forums/bug-reports' %>
| <%= link_to t(:htlal_forums), htlal_forum_url %>
| <%= link_to t(:source_code), langforums_github_url %>
<% if current_user %>
<br><b><%= t(:recent_users) %></b>
<%= User.recent.map(&:public_name).join(', ') %>
<% end %>
</p>

<% if notice %>
<p class="notice"><%= notice %></p>
<% end %>
<% if alert %>
<p class="alert"><%= alert %></p>
<% end %>

<%= yield %>

</body>
</html>
